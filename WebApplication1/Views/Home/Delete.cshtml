@model UserModel

@{
    ViewData["Title"] = "Delete Employee";
}

<h3>@ViewData["Title"]</h3>
<p>
    <a href="/user/index">Back to List</a>
</p>
<hr />

<h4>Are you sure you want to delete this employee?</h4>

<div>
    <h4>Employee Id: @Model.EmployeeId</h4>
    <h4>Full Name: @Model.FullName</h4>
    <h4>Email: @Model.Email</h4>
    <h4>Address Line: @Model.AddressLine</h4>
    <h4>City: @Model.City</h4>
</div>

<form asp-action="Delete" asp-controller="User" method="post" >
    <input type="hidden" asp-for="EmployeeId" />

    <button type="submit" class="btn btn-danger">Delete</button>
</form>
